<% if current_user.role.name.in?(["User", "Administrator"]) %>
  <!-- existing view code -->
  <h1>Live Meeting Status</h1>

<table>
  <thead>
    <tr>
      <th>Room Name</th>
      <th>Room ID</th>
      <th>Owner</th>
      <th>Participants</th>
      <th>Status</th>
    </tr>
  </thead>

  <tbody>
    <% @rooms.each do |room| %>
      <% if room.owner.name == "DIGITAL SECURITY" %>
        <tr>
          <td><%= room.name %></td>
          <td><%= room.bbb_id %></td>
          <td><%= room.owner.name %></td>
          <td><%= room.participants %></td>
          <td><%= room.online? ? "Live" : "Offline" %></td>
        </tr>
      <% end %>
    <% end %>
  </tbody>
</table>
<% else %>
  <p>You do not have access to view this page.</p>
<% end %>